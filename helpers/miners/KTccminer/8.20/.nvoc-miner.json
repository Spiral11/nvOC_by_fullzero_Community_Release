
{
  "friendlyname": "KTccminer",
  "version": "$KTccminer_ver_8",
  "hcd": "ccminer -o ${!xproto}://${!xpool}:${!xport} -u ${!xaddr}${!xwallet}${!xwork} -p $MINER_PWD ${!xext} -i ${!xintensity} $CCMINER_OPTS",
  "devlist_format": 0,

  "minerinfo":
  {
    "total_hash": "tail -100 ${NVOC}/nvoc_logs/screenlog.0 | grep "accepted" | sed -r 's/\x1B\[([0-9]{1,2}(;[0-9]{1,2})?)?[m|K]//g' | grep -o "[0-9]*.[0-9]* H/s" | awk '{print $1}' | awk '{s+=$1} END {printf "%.0f", s}'",
    "hash_count": "tail -100 ${NVOC}/nvoc_logs/screenlog.0 | grep "accepted" | grep -v grep |  wc -l | awk '{print $1}'",
    "solution_speed_unit": "false",
    "miner_error": "false",
    "rejected_shares": "false"
  },

  "install":
  {
    "latest": "true",
    "recommanded": "cuda-8.0",
    "tarball": "$KTccminer_tarball_ver_8",
    "executable": "ccminer"
  },

  "compile":
  {
    "src_path": "../src",
    "src_repo": "https://github.com/KlausT/ccminer",
    "src_commit_hash": "$KTccminer_src_ver_8",
    "command": "bash autogen.sh && bash configure --with-cuda=/usr/local/cuda-8.0 && ./build.sh",
    "output": "ccminer"
  }
}
